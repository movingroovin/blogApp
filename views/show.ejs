<% include partials/header %>
<h1>Information about the album</h1>
<div class="ui main text container segment">
    <div class="ui huge header"><%= blogs.title%></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blogs.image%>">
            <div class="content">
                <p><%= blogs.created.toDateString()%></p>
            </div>
            <div class="description">
                <p><%= blogs.body %></p>
            </div>
            <a class="ui blue basic button" href="/blogs/<%=blogs._id%>/edit">EDIT</a>
            <form id="delete" action="/blogs/<%=blogs._id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">DELETE</button>
            </form>
        </div>
    </div>
</div>
<% include partials/footer %>